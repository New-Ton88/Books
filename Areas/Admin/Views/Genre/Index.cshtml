@model IEnumerable<Genre>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 text-right">
    <partial name="_CreateButtonPartial" />
</div>
<div>
    No genres found...
    @if (Model.Count() > 0)
    {
        <table>
            <thead>
                <tr>
                    <td>No.</td>
                    <td>Genre Name</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var genre in Model)
                {
                    <tr>
                        genre.Name
                    </tr>

                }
            </tbody>
        </table>
    }
    else
    {

    }
</div>



