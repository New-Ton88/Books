@model Books.Models.ViewModels.CategoryAndGenreViewModel
@using Books.Extensions
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-dark">Delete Genre</h3>

<hr />

<form method="post" asp-action="Delete">
    <div class="text-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <label class="col-2 text-left" asp-for="Genre.CategoryId"></label>
            <select class="col-5 form-control"
                    asp-for="Genre.CategoryId"
                    asp-items="Model.Categories.ToSelectListItem(Model.Genre.CategoryId)"
                    disabled></select>
        </div>
        <div class="row form-group">
            <label class="col-2 text-left" asp-for="Genre.Name"></label>
            <input class="col-5" asp-for="Genre.Name" disabled />
        </div>
        <div class="row">
            <div class="offset-2 col-5 px-0">
                <partial name="_DeleteAndBackButtonsPartial" model="Model.Genre.Id" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}