@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-dark row">
    <h3 class="col-6 text-left">Categories List</h3>
    <div class="col-6 text-right">
        <partial name="_CreateButtonPartial" />
    </div>
</div>


<hr />


@if (Model.Count() > 0)
{
    <div class="offset-3 text-dark col-6">
        @foreach(var item in Model)
        {
        <div class="row py-1 border-bottom">
            <div class="col-8 text-left px-0">
                @item.Name
            </div>
            <div class="col-4 text-right px-0">
                <partial name="_EditAndDeleteButtonsPartial" model="item.Id" />
            </div>
        </div> 
        }
    </div>
}
else
{
    <div class="text-dark col-3 px-0">
        No Categories found...
    </div>
}

