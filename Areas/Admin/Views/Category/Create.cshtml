@model Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="text-dark">Create Category</h3>

<hr/>

<form method="post" asp-action="Create"> 
    <div class="text-dark border-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label class="col-2 text-left" asp-for="Name"></label>
            <input class="col-5" asp-for="Name" placeholder="Type Category name..." type="text" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="offset-2 col-5 px-0">
                <partial name="_CreateAndBackButtonsPartial" />
            </div>
        </div> 
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
