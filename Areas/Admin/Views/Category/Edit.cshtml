@model Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Category Edit</h3>

<hr/>

<form method="post" asp-action="Edit">
    <div class="text-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group px-0">
            <label asp-for="Name" class="text-left col-2"></label>
            <input asp-for="Name" class="col-5" type="text"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="offset-2 px-0 col-5">
                <partial name="_EditAndBackButtonsPartial" model="@Model.Id" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
