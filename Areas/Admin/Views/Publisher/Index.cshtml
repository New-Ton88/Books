@model IEnumerable<Publisher>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-dark">
    <h2 class="col-6 text-left">Publishers List</h2>
    <div class="col-6 text-right">
        <partial name="_CreateButtonPartial" />
    </div>
</div>

<hr />



@if (Model.Count() > 0)
{
<div class="offset-3 col-6 text-dark">

    @foreach (var item in Model)
    {
        <div class="row py-1 border-bottom">
            <div class="col-8 text-left">
                @item.Name
            </div>
            <div class="col-4 text-right">
                <partial name="_EditAndDeleteButtonsPartial" model="item.Id" />
            </div>
        </div>

    }
</div>
}
else
{
    <div class="text-dark col-3 px-0">
        No Publishers found
    </div>
}
   
