@model IEnumerable<Author>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-dark row">
    <h3 class="col-6 text-left">Authors list</h3>
    <div class="col-6 text-right">
        <partial name="_CreateButtonPartial" />
    </div>
</div>

<hr />

<partial name="_StatusMessagePartial" model=@TempData["StatusMessage"] />

@if (Model.Count() > 0)
{
    <div class="col-6 offset-3 text-dark">
         @foreach (var item in Model) {  
             <div class="col-3 border-dark">
                 <div>
                     <img src="@item.Image" alt="@item.Name" width="50" height="80" />
                 </div>
                 <div>
                     @item.Name
                 </div>
                 <div class="row">
                     <div class="py-1">
                         <partial name="EditDetailsDeleteButtonsPartial" model="item.Id" />
                     </div>
                 </div>
             </div>
         }
    </div>
}
else
{
    <p>
        No authors found...
    </p>
}

